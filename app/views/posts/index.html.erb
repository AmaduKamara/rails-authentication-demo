<div id="posts" class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Posts</h1>
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
  <%= link_to "New post", new_post_path, class: "btn btn-primary btn-lg" %>
</div>

